
.container {
	min-height: 100vh;
	background-color: #f5f5f5;
	padding-bottom: 20rpx;
}

/* 用户信息样式 */
.user-info {
	display: flex;
	align-items: center;
	padding: 40rpx 30rpx;
	background-color: #ffffff;
}
.avatar-container {
	margin-right: 30rpx;
}
.avatar {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	background-color: #f0f0f0;
}
.user-details {
	flex: 1;
}
.username {
	font-size: 36rpx;
	font-weight: 500;
	margin-bottom: 10rpx;
	display: block;
}
.user-id {
	font-size: 26rpx;
	color: #999;
}
.settings-icon {
	width: 48rpx;
	height: 48rpx;
}

/* 数据统计样式 */
.stats {
	display: flex;
	background-color: #ffffff;
	margin-top: 20rpx;
	padding: 30rpx 0;
}
.stat-item {
	flex: 1;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.stat-number {
	font-size: 36rpx;
	font-weight: 500;
	margin-bottom: 10rpx;
}
.stat-label {
	font-size: 26rpx;
	color: #666;
}

/* 选项列表样式 */
.options-list {
	margin-top: 20rpx;
	background-color: #ffffff;
}
.option-item {
	display: flex;
	align-items: center;
	padding: 30rpx;
	border-bottom: 1rpx solid #f0f0f0;
}
.option-icon {
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}
.option-text {
	flex: 1;
	font-size: 30rpx;
}
.arrow-icon {
	width: 32rpx;
	height: 32rpx;
	opacity: 0.5;
}

