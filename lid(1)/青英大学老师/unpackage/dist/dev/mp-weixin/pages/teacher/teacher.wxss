
.container {
	background-color: #f5f5f5;
	min-height: 100vh;
	padding-bottom: 20rpx;
}

/* Header styles */
.header {
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 88rpx;
	padding: 20rpx;
	background-color: #fff;
	position: relative;
	padding-top: 50rpx;
}
.header-left, .header-right {
	display: flex;
	align-items: center;
}
.header-title {
	font-size: 36rpx;
	font-weight: bold;
	text-align: center;
	flex: 1;
}
.back-icon, .more-icon, .camera-icon {
	width: 48rpx;
	height: 48rpx;
	margin: 0 10rpx;
}

/* Search bar styles */
.search-container {
	display: flex;
	align-items: center;
	padding: 20rpx;
	background-color: #fff;
}
.search-box {
	display: flex;
	align-items: center;
	background-color: #f5f5f5;
	border-radius: 36rpx;
	padding: 0 20rpx;
	height: 72rpx;
	flex: 1;
}
.search-icon {
	width: 40rpx;
	height: 40rpx;
	margin-right: 10rpx;
}
.search-input {
	flex: 1;
	height: 72rpx;
	font-size: 28rpx;
}
.cancel-btn {
	padding: 0 20rpx;
	font-size: 30rpx;
	color: #333;
}

/* Feature grid styles */
.feature-grid {
	display: flex;
	justify-content: space-around;
	padding: 20rpx;
	background-color: #fff;
	margin-top: 2rpx;
}
.feature-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 33.33%;
}
.feature-icon-bg {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 15rpx;
}
.green {
	background-color: #4CD964;
}
.blue {
	background-color: #1CB5FF;
}
.yellow {
	background-color: #FFCC33;
}
.blue-light {
	background-color: #007AFF;
}
.pink {
	background-color: #FF2D55;
}
.green-light {
	background-color: #5AC8FA;
}
.feature-icon {
	width: 60rpx;
	height: 60rpx;
}
.feature-text {
	font-size: 26rpx;
	color: #333;
}

/* Hot areas section */
.hot-areas {
	margin-top: 20rpx;
	background-color: #fff;
	padding: 20rpx;
}
.section-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
}
.section-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}
.view-all {
	display: flex;
	align-items: center;
	color: #999;
	font-size: 26rpx;
}
.arrow-icon {
	width: 24rpx;
	height: 24rpx;
	margin-left: 5rpx;
}

/* Hot areas grid */
.hot-areas-grid {
	display: flex;
	flex-wrap: wrap;
}
.hot-area-item {
	width: 25%;
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 30rpx;
}
.hot-area-icon {
	width: 80rpx;
	height: 80rpx;
	margin-bottom: 10rpx;
}
.hot-area-text {
	font-size: 24rpx;
	color: #333;
	text-align: center;
}

