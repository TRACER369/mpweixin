
.container {
	padding: 0;
	background-color: #f5f5f5;
	font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 状态栏样式 */
.status-bar {
	position: relative;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 8rpx 20rpx;
	background-color: #fff;
	height: 44rpx;
	font-size: 24rpx;
	color: #000;
}
.carrier {
	position: absolute;
	left: 80rpx;
	font-size: 24rpx;
}
.time {
	position: absolute;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	font-weight: 500;
}
.battery {
	position: absolute;
	right: 20rpx;
	font-size: 40rpx;
}

/* 头部区域样式 */
.header {
	display: flex;
	justify-content: space-between;
	padding: 20rpx 30rpx;
	background-color: #fff;
	border-bottom: 2rpx solid #f0f0f0;
}
.header-content {
	display: flex;
	flex-direction: column;
}
.title {
	font-size: 36rpx;
	font-weight: bold;
	margin-bottom: 8rpx;
}
.app-info {
	display: flex;
	flex-direction: column;
}
.app-name {
	font-size: 36rpx;
	font-weight: bold;
}
.app-desc {
	font-size: 24rpx;
	color: #666;
}
.header-icons {
	display: flex;
	align-items: center;
}
.more-icon {
	margin-right: 20rpx;
	font-size: 24rpx;
	color: #999;
}
.circle-icon {
	font-size: 40rpx;
	color: #333;
}

/* 付费产品区域样式 */
.pay-section {
	background-color: #fff;
	margin: 20rpx 20rpx;
	padding: 30rpx 20rpx;
	border-radius: 16rpx;
	box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.pay-title {
	font-size: 32rpx;
	font-weight: bold;
	text-align: center;
	margin-bottom: 30rpx;
}
.pay-items {
	display: flex;
	justify-content: space-around;
}
.pay-item {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.pay-icon {
	width: 90rpx;
	height: 90rpx;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 15rpx;
	font-size: 36rpx;
	color: #fff;
}
.medal {
	background-color: #ffd700;
}
.qa {
	background-color: #3498db;
}
.reward {
	background-color: #f39c12;
}
.pay-text {
	font-size: 28rpx;
	color: #333;
}

/* 公告栏样式 */
.announcement {
	display: flex;
	align-items: center;
	background-color: #fff;
	padding: 15rpx 30rpx;
	margin: 0 20rpx 20rpx 20rpx;
	border-radius: 10rpx;
}
.sound-icon {
	margin-right: 20rpx;
	color: #6495ED;
}
.announcement-text {
	font-size: 26rpx;
	color: #6495ED;
}

/* 导航菜单样式 */
.nav-menu {
	display: flex;
	justify-content: space-between;
	background-color: #fff;
	margin: 0 20rpx 20rpx 20rpx;
	padding: 30rpx;
	border-radius: 16rpx;
}
.nav-item {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.nav-icon {
	width: 110rpx;
	height: 110rpx;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 15rpx;
	font-size: 48rpx;
}
.red {
	background: linear-gradient(135deg, #ff7878, #ff3b3b);
}
.blue {
	background: linear-gradient(135deg, #78c5ff, #3b9eff);
}
.pink {
	background: linear-gradient(135deg, #ff78d2, #ff3bd1);
}
.purple {
	background: linear-gradient(135deg, #b278ff, #9a3bff);
}
.nav-text {
	font-size: 26rpx;
	text-align: center;
	line-height: 1.3;
	color: #333;
}

/* 热门产品标题 */
.hot-products-title {
	font-size: 32rpx;
	font-weight: bold;
	padding: 30rpx 30rpx 15rpx 30rpx;
	background-color: #fff;
	margin: 0 20rpx;
	border-top-left-radius: 16rpx;
	border-top-right-radius: 16rpx;
}

/* 热门产品样式 */
.hot-products {
	background-color: #fff;
	padding: 0 30rpx 30rpx 30rpx;
	margin: 0 20rpx 20rpx 20rpx;
	border-bottom-left-radius: 16rpx;
	border-bottom-right-radius: 16rpx;
}
.product-card {
	display: flex;
	position: relative;
	padding: 20rpx 0;
}
.divider {
	height: 1rpx;
	background-color: #f0f0f0;
	margin: 0;
}
.product-image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 10rpx;
	margin-right: 20rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	font-weight: bold;
	color: #fff;
	font-size: 24rpx;
}
.cv {
	background-color: #48a3ff;
}
.java {
	background-color: #ff4848;
	font-size: 20rpx;
}
.code {
	background-color: #ff8c48;
}
.product-info {
	flex: 1;
	padding-right: 50rpx;
}
.product-title {
	font-size: 28rpx;
	font-weight: bold;
	margin-bottom: 8rpx;
	color: #333;
}
.product-stats {
	font-size: 22rpx;
	color: #999;
	margin-bottom: 8rpx;
}
.product-desc {
	font-size: 22rpx;
	color: #999;
	line-height: 1.4;
}
.product-price {
	position: absolute;
	right: 0;
	top: 20rpx;
	font-size: 24rpx;
	color: #ff6b6b;
}

