
.container {
	padding: 20rpx;
}
.header {
	text-align: center;
	padding: 20rpx 0;
}
.title {
	font-size: 40rpx;
	font-weight: bold;
}
.subtitle {
	font-size: 24rpx;
	color: #666;
	margin-top: 10rpx;
}
.swiper {
	height: 80rpx;
	background-color: #FFF5F5;
	border-radius: 10rpx;
	margin: 20rpx 0;
}
.swiper-item {
	display: flex;
	align-items: center;
	padding: 0 20rpx;
}
.notice {
	display: flex;
	align-items: center;
}
.notice-icon {
	margin-right: 10rpx;
}
.notice-text {
	font-size: 26rpx;
	color: #333;
}
.grid-section {
	margin: 30rpx 0;
}
.grid {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.grid-item {
	width: 25%;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20rpx 0;
}
.grid-icon {
	width: 80rpx;
	height: 80rpx;
	margin-bottom: 10rpx;
}
.grid-text {
	font-size: 24rpx;
	color: #333;
}
.service-section {
	margin-top: 30rpx;
}
.service-row {
	display: flex;
	justify-content: space-between;
	margin-bottom: 20rpx;
}
.service-card {
	background: #fff;
	border-radius: 20rpx;
	padding: 30rpx;
	width: 45%;
	box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
	display: flex;
	flex-direction: column;
	align-items: center;
}
.service-icon {
	width: 100rpx;
	height: 100rpx;
	margin-bottom: 20rpx;
}
.service-title {
	font-size: 28rpx;
	color: #333;
}

